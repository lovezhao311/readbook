/**index.wxss**/
page{
  height: 100%;
  color:#2F4056;
  overflow: hidden;
}
.container{
  height: 100%;
  box-sizing: border-box;
  padding-bottom: 30px;
  margin-top: -150px;
  padding-top: 150px;
}
.top  image{
  width: 100%;
  height: 150px;
}
.list .item{
  margin: 0 5px;
  padding: 5px 0;
  border-bottom: 1px #e2e2e2 solid;
  height: 80px;
  box-sizing: border-box;
  flex-direction: row;
  display: flex;
}
.list .item .remark{
  flex:1;
}
.remark text{
  font-size: 12px;
  color: #c2c2c2;
}
.remark .name{
  color:#2F4056;
  font-size: 14px;
}
.remark .wx-icon1607{
  color: #FF5722;
  font-size: 16px;
}
.list .item .handle{
  width: 20px;
  flex-basis:20px;
  align-self:flex-end;
}
.list .item image{
  flex-basis:40px;
  width: 40px;
  height: 50px;
  margin-right: 15px;
  margin-top:10px;
}

